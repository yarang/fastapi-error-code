{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run .\\.claude\\hooks\\moai\\session_start__show_project_info.py"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run .\\.claude\\hooks\\moai\\session_end__auto_cleanup.py &"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .\\.claude\\hooks\\moai\\pre_tool__security_guard.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .\\.claude\\hooks\\moai\\post_tool__code_formatter.py",
            "timeout": 30000
          },
          {
            "type": "command",
            "command": "uv run .\\.claude\\hooks\\moai\\post_tool__linter.py",
            "timeout": 60000
          },
          {
            "type": "command",
            "command": "uv run .\\.claude\\hooks\\moai\\post_tool__ast_grep_scan.py",
            "timeout": 30000
          }
        ]
      }
    ]
  },
